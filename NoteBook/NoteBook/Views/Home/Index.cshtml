                </svg>
            </a>
            <button class="settings-button">
                <i class="fas fa-cog settings-icon"></i>
            </button>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <div class="flame-card">
                    <div class="card-body">
                        <h5 class="card-title">Not Sayısı</h5>
                        <hr />

                        <p class="card-text">@ViewBag.NoteCount</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="flame-card">
                    <div class="card-body">
                        <h5 class="card-title">Şifre Sayısı</h5>
                        <hr />

                        <p class="card-text">@ViewBag.PasswordCount</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="flame-card">
                    <div class="card-body">
                        <h5 class="card-title">Tarih</h5>
                        <hr />
                        <p class="card-text date"></p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="flame-card">
                    <div class="card-body">
                        <h5 class="card-title">Saat</h5>
                        <hr />
                        <p class="card-text time"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

   <script>
       
        function updateDateTime() {
            var now = new Date();
            var date = now.toLocaleDateString();
            var time = now.toLocaleTimeString();

            document.querySelector('.date').textContent = date;
            document.querySelector('.time').textContent = time;
        }

     
        document.addEventListener('DOMContentLoaded', function() {
            updateDateTime();
                      setInterval(updateDateTime, 1000);
        });
    </script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
</html>
    
